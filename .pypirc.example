# PyPI Configuration Example
# Copy this file to ~/.pypirc and fill in your API tokens
# NEVER commit your actual ~/.pypirc file to version control!

[distutils]
index-servers =
    pypi
    testpypi

[pypi]
username = __token__
password = pypi-YOUR_PYPI_API_TOKEN_HERE

[testpypi]
repository = https://test.pypi.org/legacy/
username = __token__
password = pypi-YOUR_TESTPYPI_API_TOKEN_HERE

# How to get API tokens:
# 1. PyPI: https://pypi.org/manage/account/token/
# 2. Test PyPI: https://test.pypi.org/manage/account/token/
#
# Security Notes:
# - Tokens start with "pypi-"
# - Keep your tokens secret
# - Set file permissions: chmod 600 ~/.pypirc
# - Never commit to git
# - Add .pypirc to .gitignore
